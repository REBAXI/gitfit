<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :biography %>
    <%= form.text_area :biography, class: "form-control", :placeholder => "Tell us about you.." %>
  </div>

  <div>
    <%= form.label :instagrm %>
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">@</div>
        </div>
         <%= form.text_field :instagram_username, class:"form-control", id:"inlineFormInputGroupUsername", :placeholder =>"Username" %>
      </div>
    </div>

      <div class="field form-group">
        <%= form.label :age_bracket %>
        <br>
        <%= form.select(:age_bracket, options_for_select(['18-25', '25-35', '35-45', '45+']), :include_blank => "Select an age bracket..", class: "form-control") %>
      </div>

  
      <div class="field form-group">
        <%= form.label :lifestyle %>
        <br>
        <%= form.select(:lifestyle, options_for_select(['Bodybuilder', 'Fitness Model', 'Powerlifter','Athlete','Swimmer', 'Cyclist', 'Sports Player', 'Martial Artist', 'Vegan', 'Dad Bod']), :include_blank => "Select a lifestyle..", class: "form-control") %>
      </div>


  <div class="field form-group">
    <%= form.label :gender %>
    <br>
    <%= form.select(:gender, options_for_select(['Male', 'Female', 'Other']), :include_blank => "Select a gender..", class: "form-control") %>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
