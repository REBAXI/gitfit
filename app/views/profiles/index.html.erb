    <header>
    <!-- banner -->
    <div class="text-light text-md-right text-center banner">
      <h1 class="display-4 banner-heading">Welcome to <span class="display-3">gitfit</span></h1>
      <p class="lead banner-par">Your new lifestyle starts here</p>
    </div>
    <!-- end of banner -->
