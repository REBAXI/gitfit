<h1>User#account</h1>
<table>
  <thead>
    <tr>
    <th>Product Name</th>
    <th>Product Description</th>
      <th>Order ID</th>
      <th>User ID</th>
      <th>Product ID</th>
      <th>Price</th>
      <th>Purchase Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody>
        <tr>
            <% @orders.each do |order| %>
                <td><%= Product.find(order.product_id).title %></td>
                <td><%= Product.find(order.product_id).description %></td>
                <td><%= sanitize Product.find(order.product_id).content, tags: %w(h2 h3 h4 h1 figure strong em a td tr table blockquote ul b i), attributes: %w(href img) %></td>
                <td><%= order.id %></td>
                <td><%= order.user_id %></td>
                <td><%= order.product_id %></td>
                <td><%= order.purchase_price %></td>
                <td><%= order.created_at %></td>
        </tr>
            <% end %>
    </tbody>
